<div class="row events_title">
  <div class="col-xs-12 text-center">
    <h3>Latest Events</h3>
    <h4>Check out the latest Events coming your way! Theres's somthing for everyone! </h4>
  </div>
</div>
<div class="container-fluid">
  <div class="album text-muted">
            <% @events.each do |event| %>

            <div class="card text-center event_cards">
              <div class="col-md-12 inner_card">
                <div class="col-xs-12 text-center">
                  <h3><strong><%= link_to event.name, event_path(event) %></strong></h3>
                </div>
                <div class="col-xs-12 text-center location">
                  <h5><%= event.location %></h5>
                </div>
                  <div class="row details_row">
                    <div class="col-xs-6">
                      <div class="posted_time"><%= "Posted #{time_ago_in_words(event.created_at).gsub('about ','')} ago" %></div>
                    </div>
                    <div class="col-xs-6">
                      <%= link_to "Find Out More", event_path(event), class: "btn btn-success find_more_btn" %>
                    </div>
                  </div>
              </div>
            </div>
            <% end %>
      </div>
</div>
