<div class="container-fluid">
  <div class="album text-muted">
            <% @events.each do |event| %>
            <div class="card text-center event_cards">

                <div class="col-xs-12 text-center">
                  <h3><strong><%= event.name %></strong></h3>
                </div>
                <div class="col-xs-12 text-center">
                  <h5><%= event.location %></h5>
                </div>
                <div class="row details_row">
                  <div class="col-xs-7">
                    <div class="posted_time"><%= "Posted #{time_ago_in_words(event.created_at).gsub('about ','')} ago" %></div>
                  </div>
                  <div class="col-xs-5">
                    <%= link_to "Find Out More", event_path(event), class: "btn btn-success" %>
                  </div>
                </div>



            </div>
            <% end %>
      </div>
</div>
