<%= form_for @event, html: { multipart: true } do |f| %>
<div class="form-group">
  <label>Event Name</label>
  <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <label>Event Description</label>
  <%= f.text_area :description, rows: 5, placeholder: "Say something about your event...", class: "form-control" %>
</div>

<div class="form-group">
  <label>Location</label>
  <%= f.text_field :location, placeholder: "Where you are holding your event...", class: "form-control" %>
</div>

<div class="form-group">
  <label>Price Per Person</label>
  <div class="input-group">
    <div class="input-group-addon">â‚¬</div>
    <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <label>Capacity</label>
  <%= f.number_field :capacity, placeholder: "Enter a Max. Capacity", class: "form-control" %>
</div>

<label>Amenities</label>

<div class="form-group">
  <%= f.check_box :includes_food %>
  Food Available
</div>
<div class="form-group">
  <%= f.check_box :includes_drink %>
  Drinks Available
</div>

<div class="form-group">
  <%= f.date_select :starts_at, class:"form-control" %>
</div>

<div class="form-group">
  <%= f.date_select :ends_at, class:"form-control" %>
</div>

<label>Themes</label>

<%= f.collection_check_boxes(:category_ids, @categories, :id, :name) do |b| %>
<div class="form-group">
  <%= b.check_box(class: "check_box") %>
  <%= b.object.name %>
</div>
<% end %>

<label>Photos</label>

<div class="form-group">
  <span class="btn btn-default">
    Upload Photos
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </span>
</div>

<label>Uploaded Photos</label>
<div id="photos">
  <%= render 'photos/list' %>
</div>

<label>Publish this Event?</label>

<div class="form-group">
  <%= f.check_box :active %>
  Active
</div>

<div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>
